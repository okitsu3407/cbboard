<h1>目安箱</h1>

<table>
  <thead>
    <tr>
      <th>内容</th>
      <th colspan="3"></th>
      <%= link_to 'topに戻る', "/" %>
    </tr>
  </thead>

  <tbody>
    <% @meyasus.each do |meyasu| %>
      <tr>
        <td><%= meyasu.content %></td>
        <td><%= link_to '詳細', meyasu %></td>
