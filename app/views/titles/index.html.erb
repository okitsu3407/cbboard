<p id="notice"><%= notice %></p>

<h1>教科一覧</h1>

<table>
  <thead>
    <tr>
      <th>教科</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @titles.each do |title| %>
      <tr>
        <td><%= title.kyouka %></td>
        <td><%= link_to '表示', title %></td>
        <td><%= link_to '編集', edit_title_path(title) %></td>
        <td><%= link_to '削除', title, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

