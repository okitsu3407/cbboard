<p id="notice"><%= notice %></p>

<h1>学年一覧</h1>

<table>
  <thead>
    <tr>
      <th>学年</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grates.each do |grate| %>
      <tr>
        <td><%= grate.gakunen %></td>
        <td><%= link_to '表示', grate %></td>
        <td><%= link_to '編集', edit_grate_path(grate) %></td>
        <td><%= link_to '削除', grate, method: :delete, data: { confirm: '本当によろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

