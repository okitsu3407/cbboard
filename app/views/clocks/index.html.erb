<p id="notice"><%= notice %></p>

<h1>時限/h1>

<table>
  <thead>
    <tr>
      <th>時限</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clocks.each do |clock| %>
      <tr>
        <td><%= clock.zigen %></td>
        <td><%= link_to '表示', clock %></td>
        <td><%= link_to '編集', edit_clock_path(clock) %></td>
        <td><%= link_to '削除', clock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

