<p id="notice"><%= notice %></p>

<h1>連絡黒板</h1>

<table border = "1">
  <thead>
    <tr>
      <th>日付</th>
      <th>学年</th>
      <th>クラス</th>
      <th>時間割</th>
      <th>教科</th>
      <th>内容</th>
      <th>課題</th>
      <th>必要なもの</th>
      <th>教室</th>
      <th>先生</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @timetables.each do |timetable| %>
       <% @week = ["日","月","火","水","木","金","土"] %>
      <tr>
        <td><%= timetable.hiduke %>(<%= @week[timetable.hiduke.wday] %>)</td>
        <td><%= timetable.grate.gakunen %></td>
        <td><%= timetable.gclass.kumi %></td>
        <td><%= timetable.clock.zigen %></td>
        <td><%= timetable.title.kyouka %></td>
        <td><%= timetable.content %></td>
        <td><%= timetable.task %></td>
        <td><%= timetable.need %></td>
        <td><%= timetable.classroom.kyousitsu %></td>
        <td><%= timetable.teacher.sensei %></td>
        <td><%= link_to '表示', timetable %></td>
        <td><%= link_to '編集', edit_timetable_path(timetable) %></td>
        <td><%= link_to '削除', timetable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

