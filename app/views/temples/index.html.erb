<h1>時間割テンプレート</h1>



<table border = "1">
<thead>

  <tr>
      <% @temples.each do |temple| %>
      <th><%= temple.grate.gakunen %>年<%= temple.gclass.kumi %>組</th>
      <!--<th colspan="3"></th>-->
      <% end %>

      <% Temple.weeks.each do |w| %>
        <th></th>
        <td><%= w[0] %></td>
      <% end %>
      
  </tr>
       
</thead>

  <tbody>
    
  <% @temples.each do |temple| %>
        <td><%= temple.title.kyouka %>
        <br>
        <%= link_to '詳細', temple %>
        <%= link_to '編集', edit_temple_path(temple) %>
        <%= link_to '削除', temple, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %> 
       
	</tbody>
</table>
  
      


