<p id="notice"><%= notice %></p>

<h1>教室</h1>

<table>
  <thead>
    <tr>
      <th>教室</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= classroom.kyousitsu %></td>
        <td><%= link_to '表示', classroom %></td>
        <td><%= link_to '編集', edit_classroom_path(classroom) %></td>
        <td><%= link_to '削除', classroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

